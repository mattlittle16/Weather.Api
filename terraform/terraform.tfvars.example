# Copy this file to terraform.tfvars and fill in your actual values
# DO NOT commit terraform.tfvars to version control

# AWS Configuration
aws_region = ""

# Domain Configuration
domain_name    = ""
hosted_zone_id = ""

# Lightsail Configuration
service_name     = "weather-api-prod"
container_power  = "micro"
container_scale  = 1
environment_name = "production"

# ECR Configuration
repository_name = "weather-api"
image_tag      = "latest"

# Legacy - keeping for compatibility (now managed by ECR module)
container_image = ""

# SSL Certificate
certificate_name = "weather-api-prod-cert"

# SSL Certificate Attachment (set to true after certificate validation)
attach_custom_domain = true

# API Configuration (REQUIRED - set these values)
openweather_api_key = ""
api_key            = ""

# API Settings
openweather_base_url     = "https://api.openweathermap.org"
rate_limit              = 50
rate_limit_time_minutes = 1
daily_api_limit         = 900

# DNS Configuration
dns_ttl = 300

# Tags
tags = {
  Project     = "weather-api"
  Environment = "production"
  ManagedBy   = "terraform"
  Domain      = ""
}